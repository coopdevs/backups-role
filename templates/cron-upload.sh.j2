#!/bin/bash

# Exit with error code 1 if any command fails
set -e

function title {
  echo -e "\n## $1 ##" | tee /dev/fd/2;
  date | tee /dev/fd/2;
}

title "Restic backup"
restic backup \
  {% if backups_role_script_prepare_template == "cron-prepare.sh.j2" %}
	{{ backups_role_tmp_path }}/pg_dump \
	{{ backups_role_tmp_path }}/config.tar.gz \
  {% endif %}
	{{ backups_role_assets_paths|join(' ') }}

echo "...done"

title "Restic forget"
restic forget \
  --keep-last    {{ backups_role_keep_last }} \
  --keep-hourly  {{ backups_role_keep_hourly }} \
  --keep-daily   {{ backups_role_keep_daily }} \
  --keep-weekly  {{ backups_role_keep_weekly }} \
  --keep-monthly {{ backups_role_keep_monthly }} \
  --keep-yearly  {{ backups_role_keep_yearly }} \
  --prune
echo "...done"

title "Restic check"
restic check
echo "...done"