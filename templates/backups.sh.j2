#!/bin/bash

# Backup git revision
# pushd /home/git_repo/current
# git rev-parse --verify HEAD > {{ backups_role_last_backup_path }}/git_rev
# popd

# Postgres DB dump
/usr/bin/pg_dump --encoding=UTF8 {{ backups_role_db_name }} > {{ backups_role_last_backup_path }}/pg_dump

# Compress configuration files
tar -czvf {{ backups_role_last_backup_path }}/config.tar.gz {{ backups_role_config_paths|join(' ') }}

# Compress assets data
tar -czvf {{ backups_role_last_backup_path }}/assets.tar.gz {{ backups_role_assets_paths|join(' ') }}
